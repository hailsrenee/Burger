     {{!-- * Setup the `index.handlebars` to have the template that Handlebars can render onto.

     * Create a button in `index.handlebars` that will submit the user input into the database. --}}

     <div class="row">
  <center>
    <div class="col-md-6">
      <h4 class="red_font">Nom Nom Nom!</h4>
      <div id="ready_to_eat">

        {{#each burgers}}
          {{#unless this.devoured}}
          <form action="burger/eat/{{this.id}}" method="POST">
            <div class="input-group">
              <li class="form-control">{{this.id}}. {{this.burger_name}}</li>
              <input type="hidden" name="id" value={{this.id}}>
                <span class="input-group-btn">
                  <button class="btn btn-success devour-button" type="submit">Eat It!</button>
                </span>
            </div>
          </form>
          {{/unless}}
        {{/each}}

      </div>
    </div>

    <div class="col-md-6">
      <h4 class="red_font">Already Eaten!</h4>
      <div id="already_eaten">

        {{#each burgers}}
          {{#if this.devoured}}
            <div class="input-group">
              <li class="form-control">{{this.id}}. {{this.burger_name}}</li>
            </div>
          {{/if}}
        {{/each}}

      </div>
    </div>
  </center>
</div>